<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/OptionFrameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

        <mju.t3rd.sailingtext.lk.BackgroundSurfaceView
        android:id="@+id/BackgroundSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/OptionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/OptionBlankView0"
            style="@style/blankView" />

        <TextView
            android:id="@+id/OptionTitle"
            style="@style/TitleText"
            android:text="@string/Option" />

        <TextView
            android:id="@+id/OptionBlankView1"
            style="@style/blankView" />

        <TextView
            android:id="@+id/OptionTutorial"
            style="@style/ButtonText"
            android:text="@string/Tutorial" />

        <TextView
            android:id="@+id/OptionBlankView2"
            style="@style/blankView" />

        <TextView
            android:id="@+id/OptionCredits"
            style="@style/ButtonText"
            android:text="@string/Credit" />
    </LinearLayout>

</FrameLayout>