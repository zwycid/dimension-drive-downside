<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/OptionTutorialFrameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <mju.t3rd.sailingtext.lk.BackgroundSurfaceView
        android:id="@+id/BackgroundSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/OptionTutorialListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/OptionTutorialTextviewBlank"
            style="@style/blankView" />

        <TextView
            android:id="@+id/OptionTutorialTextviewTitle"
            style="@style/TitleText"
            android:text="@string/Tutorial" />

    </LinearLayout>

</FrameLayout>