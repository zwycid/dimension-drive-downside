<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/OptionCreditFrameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <mju.t3rd.sailingtext.lk.BackgroundSurfaceView
        android:id="@+id/BackgroundSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/OptionCreditTextviewBlank"
            style="@style/blankView" />

        <TextView
            android:id="@+id/OptionCreditTextviewTitle"
            style="@style/TitleText"
            android:text="@string/Credit" />

        <TextView
            android:id="@+id/OptionCreditTextviewBlank1"
            style="@style/blankView" />

        <TextView
            android:id="@+id/OptionCreditTextviewContent"
            style="@style/TitleText"
            android:text="@string/Credit" />
    </LinearLayout>

</FrameLayout>