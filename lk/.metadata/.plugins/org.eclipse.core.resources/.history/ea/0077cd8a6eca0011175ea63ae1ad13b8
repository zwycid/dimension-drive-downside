package lk.summer.project;

import android.content.Context;
import android.util.AttributeSet;
import android.widget.TextView;

public class GlowingTextView extends TextView {
	public static final int SMALL	= 0;
	public static final int LARGE	= 1;
	
	public GlowingTextView(Context context, AttributeSet attrs, int defStyle) {
		super(context, attrs, defStyle);
		initTextView();
	}

	public GlowingTextView(Context context, AttributeSet attrs) {
		super(context, attrs);
		initTextView();
	}

	public GlowingTextView(Context context) {
		super(context);
		initTextView();
	}
	
	public void initTextView(){
	}
	public void initTextView(String text, int textType, int textColor, int textShadowSize, float textShadowRadious, int textShadowDx, int textShadowDy, int textShadowColor){
		this.setTextSize(textType);
		this.setTextColor(textColor);
		this.setShadowLayer(textShadowRadious, textShadowDx, textShadowDy, textColor);
		this.setText(text);
	}
}
