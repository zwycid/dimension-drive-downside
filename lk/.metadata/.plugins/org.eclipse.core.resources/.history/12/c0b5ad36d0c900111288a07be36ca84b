package com.hanback.testdb;

import java.util.ArrayList;

import android.content.Context;
import android.util.AttributeSet;
import android.view.View;
import android.widget.TextView;

public class IdView extends View {

	private static final int TOTAL_RANK = 5;
	private static final String TEXTVIEW_ID = "total_id";

	private TextView[] textViews;

	public IdView(Context context, AttributeSet attrs, int defStyle) {
		super(context, attrs, defStyle);
		initView();
	}

	public IdView(Context context, AttributeSet attrs) {
		super(context, attrs);
		initView();
	}

	public IdView(Context context) {
		super(context);
		initView();
	}
	
	public void initView(){
		textViews	= new TextView[TOTAL_RANK];
		
		for(int i = 0 ; i < TOTAL_RANK ; i++){
			try {
				textViews[i]	= (TextView)this.findViewById(R.id.class.getField(TEXTVIEW_ID+i).getInt(TEXTVIEW_ID+i));
			} catch (IllegalArgumentException e) {	e.printStackTrace();
			} catch (SecurityException e) {			e.printStackTrace();
			} catch (IllegalAccessException e) {	e.printStackTrace();
			} catch (NoSuchFieldException e) {		e.printStackTrace();
			}
		}
	}
	
	public void setIDs(String[] id_array){
		for(int i = 0 ; i < TOTAL_RANK ; i++){
			textViews[i].setText(id_array[i]);
		}
	}
	public void setID(int index, String id){
		for(int i = 0 ; i < TOTAL_RANK ; i++){
			textViews[index].setText(id);
		}
	}
}
