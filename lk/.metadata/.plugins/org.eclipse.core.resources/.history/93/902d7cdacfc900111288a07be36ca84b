package com.hanback.testdb;

import java.util.ArrayList;

import android.content.Context;
import android.util.AttributeSet;
import android.view.View;
import android.widget.TextView;

public class RankingView extends View {
	
	private TextView[] rankings;
	private static final int TOTAL_RANK = 5;
	private static final String TEXTVIEW_RANK = "user_rank";

	public RankingView(Context context, AttributeSet attrs, int defStyle) {
		super(context, attrs, defStyle);
		// TODO Auto-generated constructor stub
	}

	public RankingView(Context context, AttributeSet attrs) {
		super(context, attrs);
		// TODO Auto-generated constructor stub
	}

	public RankingView(Context context) {
		super(context);
		// TODO Auto-generated constructor stub
	}
	
	public void initView(){
		rankings	= new TextView[TOTAL_RANK];
		
		for(int i = 1 ; i < TOTAL_RANK+1 ; i++){
			try {
				rankings[i] = (TextView)this.findViewById(R.id.class.getField(TEXTVIEW_RANK+i).getInt(TEXTVIEW_RANK+i));
				rankings[i].setText(i + " : ");
			} catch (IllegalArgumentException e) {	e.printStackTrace();
			} catch (SecurityException e) {			e.printStackTrace();
			} catch (IllegalAccessException e) {	e.printStackTrace();
			} catch (NoSuchFieldException e) {		e.printStackTrace();
			}
		}
	}
}
